  .sim-bar-bg {
    width: 80px;
    height: 4px;
    background: #2a2a2a;
    border-radius: 2px;
    overflow: hidden;
  }

  .sim-bar-fill {
    height: 100%;
    border-radius: 2px;
    transition: width 0.4s ease;
  }

  .sim-bar-fill.high {
    background: #e8774d;
  }

  .sim-bar-fill.medium {
    background: #e8a84d;
  }

  .sim-bar-fill.low {
