  .no-match svg {
    width: 18px;
    height: 18px;
    stroke: #4d9e6b;
    stroke-width: 2;
  }

  /* Toast notification */
  .toast {
    position: fixed;
    bottom: 32px;
    left: 50%;
    transform: translateX(-50%) translateY(120px);
    background: #1f1f1f;
    border: 1px solid #2a2a2a;
    backdrop-filter: blur(12px);
    border-radius: 16px;
