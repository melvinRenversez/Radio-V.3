  }
</style>

<body>
  <canvas id="particleCanvas"></canvas>

  <div class="main-container">
    <!-- Header -->
    <div class="header">
      <h1>Add Artiste</h1>
      <p class="subtitle">Ajouter un nouvel artiste à votre bibliothèque</p>
      <div class="header-actions">
        <a href="/" class="action-btn">
          <svg class="btn-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round">
            <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
            <polyline points="9 22 9 12 15 12 15 22"></polyline>
          </svg>
          Back to Library
        </a>
      </div>
    </div>

    <!-- Form -->
    <div class="form-card">
      <label class="form-label">Nom de l'artiste</label>
      <div class="input-wrapper">
        <input type="text" class="form-input" id="artistInput" placeholder="Ex. Lone Assembly" autocomplete="off" maxlength="64">
        <svg class="input-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round">
          <circle cx="12" cy="8" r="4"></circle>
          <path d="M4 20c0-4 4-6 8-6s8 2 8 6"></path>
        </svg>
      </div>
      <div class="input-footer">
        <span class="char-count" id="charCount">0 / 64</span>
      </div>

      <!-- Similarity results -->
      <div class="similarity-panel" id="similarityPanel">
        <div class="similarity-header">
          <svg viewBox="0 0 24 24" fill="none" stroke="#666" stroke-linecap="round" stroke-linejoin="round">
            <circle cx="11" cy="11" r="8"></circle>
            <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
          </svg>
          <span class="similarity-title">Similarités détectées</span>
          <span class="similarity-count" id="simCount">0 résultat</span>
        </div>
        <div class="similarity-divider"></div>
        <div id="similarityList"></div>
      </div>

      <!-- Submit -->
      <button class="submit-btn" id="submitBtn" disabled>
        <span class="spinner"></span>
        <svg class="btn-icon-submit" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round">
          <line x1="12" y1="5" x2="12" y2="19"></line>
          <line x1="5" y1="12" x2="19" y2="12"></line>
        </svg>
        <span class="btn-text">Ajouter l'artiste</span>
      </button>
    </div>
  </div>

  <!-- Toast -->
  <div class="toast" id="toast">
    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" id="toastIcon">
      <polyline points="20 6 9 17 4 12"></polyline>
    </svg>
    <span id="toastText"></span>
  </div>

  <script>
    // ============================================
    // DONNÉES DU SERVEUR (EJS)
    // ============================================
    // Remplacez cette ligne par : let artists = <%- JSON.stringify(artists) %>;
    let artists = <%- JSON.stringify(artists) %>

    // ============================================
    // SIMILARITÉ — Algorithme Levenshtein + scoring
    // ============================================

    function levenshtein(a, b) {
      const m = a.length,
        n = b.length;
      const dp = Array.from({
        length: m + 1
      }, () => Array(n + 1).fill(0));

      for (let i = 0; i <= m; i++) dp[i][0] = i;
      for (let j = 0; j <= n; j++) dp[0][j] = j;

      for (let i = 1; i <= m; i++) {
        for (let j = 1; j <= n; j++) {
          const cost = a[i - 1] === b[j - 1] ? 0 : 1;
          dp[i][j] = Math.min(
            dp[i - 1][j] + 1,
            dp[i][j - 1] + 1,
            dp[i - 1][j - 1] + cost
          );
        }
      }
      return dp[m][n];
    }

    function normalize(str) {
      return str.toLowerCase().trim().replace(/[^a-z0-9\s]/g, '').replace(/\s+/g, ' ');
    }

    function computeSimilarity(input, artistName) {
      const a = normalize(input);
      const b = normalize(artistName);

      if (a === '' || b === '') return 0;

      // Exact match (après normalisation)
      if (a === b) return 100;

      const maxLen = Math.max(a.length, b.length);
      const dist = levenshtein(a, b);
      const baseScore = Math.round(((maxLen - dist) / maxLen) * 100);

      // Bonus si l'un contient l'autre
      let bonus = 0;
      if (a.includes(b) || b.includes(a)) {
        bonus = 12;
      }

      // Bonus si même premier mot
      const wordsA = a.split(' ');
      const wordsB = b.split(' ');
      if (wordsA[0] === wordsB[0] && wordsA[0].length > 2) {
        bonus += 8;
      }

      return Math.min(100, baseScore + bonus);
    }

    function findSimilarArtists(input) {
      if (normalize(input) === '') return [];

      const results = artists
        .map(artist => ({
          nom: artist.nom,
          score: computeSimilarity(input, artist.nom),
          isExact: normalize(input) === normalize(artist.nom)
        }))
        .filter(r => r.score >= 40)
        .sort((a, b) => b.score - a.score)
        .slice(0, 5);

      return results;
    }

    // ============================================
    // UI — Render similarités
    // ============================================

    function getScoreClass(score) {
      if (score >= 80) return 'high';
      if (score >= 55) return 'medium';
      return 'low';
    }

    function renderSimilarities(results) {
      const panel = document.getElementById('similarityPanel');
      const list = document.getElementById('similarityList');
      const countEl = document.getElementById('simCount');

      if (results.length === 0) {
        panel.classList.remove('visible');
        return;
      }

      panel.classList.add('visible');
      countEl.textContent = results.length + (results.length === 1 ? ' résultat' : ' résultats');
      list.innerHTML = '';

      results.forEach((item, i) => {
        const cls = getScoreClass(item.score);
        const exactHtml = item.isExact ?
          `<div class="exact-badge">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z"></path>
                            <line x1="12" y1="9" x2="12" y2="13"></line>
                            <line x1="12" y1="17" x2="12.01" y2="17"></line>
                        </svg>
                        Doublon exact
                    </div>` :
          '';

        const el = document.createElement('div');
        el.className = 'similarity-item' + (item.isExact ? ' exact-match' : '');
        el.style.animationDelay = `${i * 0.06}s`;
        el.innerHTML = `
                    <span class="sim-rank">${i + 1}</span>
                    <span class="sim-name">${item.nom}</span>
                    ${exactHtml}
                    <div class="sim-score-wrap">
                        <div class="sim-bar-bg">
                            <div class="sim-bar-fill ${cls}" style="width: ${item.score}%"></div>
                        </div>
                        <span class="sim-score-text ${cls}">${item.score}%</span>
                    </div>
                `;
        list.appendChild(el);
      });
    }

    // ============================================
    // INPUT — Écoute en temps réel
    // ============================================

    const input = document.getElementById('artistInput');
    const charCount = document.getElementById('charCount');
    const submitBtn = document.getElementById('submitBtn');

    let debounceTimer = null;

    input.addEventListener('input', () => {
      const val = input.value;
      const len = val.length;

      // Char count
      charCount.textContent = `${len} / 64`;
      charCount.classList.toggle('warning', len > 50);

      // Submit button
      submitBtn.disabled = val.trim().length === 0;

      // Debounce la recherche de similarité
      clearTimeout(debounceTimer);
      debounceTimer = setTimeout(() => {
        const results = findSimilarArtists(val);
        renderSimilarities(results);
      }, 180);
    });

    // ============================================
    // SUBMIT
    // ============================================

    function showToast(message, type = 'success') {
      const toast = document.getElementById('toast');
      const toastText = document.getElementById('toastText');
      const toastIcon = document.getElementById('toastIcon');

      toast.className = 'toast ' + type;
      toastText.textContent = message;

      if (type === 'success') {
        toastIcon.innerHTML = `<polyline points="20 6 9 17 4 12"></polyline>`;
      } else {
        toastIcon.innerHTML = `
                    <line x1="18" y1="6" x2="6" y2="18"></line>
                    <line x1="6" y1="6" x2="18" y2="18"></line>
                `;
      }

      toast.classList.add('show');
      setTimeout(() => toast.classList.remove('show'), 3000);
    }

    submitBtn.addEventListener('click', async () => {
      const val = input.value.trim();
      if (!val) return;

      // Check doublon exact
      const exactMatch = artists.find(a => normalize(a.nom) === normalize(val));
      if (exactMatch) {
        showToast(`"${exactMatch.nom}" existe déjà.`, 'error');
        return;
      }

      // Simulate POST /api/add-artiste
      submitBtn.classList.add('loading');
      submitBtn.disabled = true;

      fetch("/add-artist", {
          method: "POST",
          headers: {
            "Content-Type": "application/json"
          },
          body: JSON.stringify({
            artist: val
          })
        })
        .then(() => {
          window.location.href = "/admin";
        });

      // Simule succès
      artists.push({
        nom: val
      });
      showToast(`"${val}" a été ajouté avec succès.`, 'success');

      // Reset
      input.value = '';
      charCount.textContent = '0 / 64';
      charCount.classList.remove('warning');
      submitBtn.disabled = true;
      submitBtn.classList.remove('loading');
      document.getElementById('similarityPanel').classList.remove('visible');
    });

    // ============================================
    // PARTICULES CANVAS (même système que history)
    // ============================================

    const canvas = document.getElementById('particleCanvas');
    const ctx = canvas.getContext('2d');

    function resizeCanvas() {
      canvas.width = window.innerWidth;
      canvas.height = window.innerHeight;
    }
    resizeCanvas();
    window.addEventListener('resize', resizeCanvas);

    class Particle {
      constructor() {
        this.reset();
      }
      reset() {
        this.x = Math.random() * canvas.width;
        this.y = Math.random() * canvas.height;
        this.size = Math.random() * 2 + 0.5;
        this.speedX = (Math.random() - 0.5) * 0.5;
        this.speedY = (Math.random() - 0.5) * 0.5;
        this.opacity = Math.random() * 0.5 + 0.2;
        this.color = Math.random() > 0.5 ? '#ffffff' : '#666666';
      }
      update() {
        this.x += this.speedX;
        this.y += this.speedY;
        if (this.x < 0 || this.x > canvas.width) this.speedX *= -1;
        if (this.y < 0 || this.y > canvas.height) this.speedY *= -1;
      }
      draw() {
        ctx.fillStyle = this.color;
        ctx.globalAlpha = this.opacity;
        ctx.beginPath();
        ctx.arc(this.x, this.y, this.size, 0, Math.PI * 2);
        ctx.fill();
      }
    }

    const particles = [];
    let particleCount;
    if (window.innerWidth < 400) particleCount = 50;
    else if (window.innerWidth < 600) particleCount = 100;
    else if (window.innerWidth < 900) particleCount = 150;
    else if (window.innerWidth < 1200) particleCount = 250;
    else if (window.innerWidth < 1600) particleCount = 350;
    else if (window.innerWidth < 2000) particleCount = 550;
    else particleCount = 700;

    for (let i = 0; i < particleCount; i++) particles.push(new Particle());

    function animateParticles() {
      ctx.clearRect(0, 0, canvas.width, canvas.height);

      ctx.globalAlpha = 0.1;
      for (let i = 0; i < particles.length; i++) {
        for (let j = i + 1; j < particles.length; j++) {
          const dx = particles[i].x - particles[j].x;
          const dy = particles[i].y - particles[j].y;
          const distance = Math.sqrt(dx * dx + dy * dy);
          if (distance < 120) {
            ctx.strokeStyle = '#666666';
            ctx.lineWidth = 0.5;
            ctx.beginPath();
            ctx.moveTo(particles[i].x, particles[i].y);
            ctx.lineTo(particles[j].x, particles[j].y);
            ctx.stroke();
          }
        }
      }

      particles.forEach(p => {
        p.update();
        p.draw();
      });
      requestAnimationFrame(animateParticles);
    }

    animateParticles();
  </script>
