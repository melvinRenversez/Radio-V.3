  /* Submit btn */
  .submit-btn {
    width: 100%;
    padding: 16px;
    background: #fff;
    border: none;
    border-radius: 16px;
    color: #0a0a0a;
    font-size: 16px;
    font-family: 'Inter', sans-serif;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    margin-top: 28px;
    display: flex;
    align-items: center;
    justify-content: center;
