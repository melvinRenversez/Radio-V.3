    box-shadow: none;
  }

  .submit-btn svg {
    width: 18px;
    height: 18px;
    stroke-width: 2.5;
  }

  /* Spinner */
  .spinner {
    width: 18px;
    height: 18px;
    border: 2.5px solid #0a0a0a;
    border-top-color: transparent;
    border-radius: 50%;
    animation: spin 0.6s linear infinite;
    display: none;
  }

  .submit-btn.loading .spinner {
    display: block;
  }

  .submit-btn.loading .btn-text {
    display: none;
  }

  .submit-btn.loading .btn-icon-submit {
    display: none;
  }

  @keyframes spin {
    to {
      transform: rotate(360deg);
    }
  }

  /* Similarity panel */
  .similarity-panel {
    margin-top: 28px;
    display: none;
  }

  .similarity-panel.visible {
    display: block;
    animation: fadeInUp 0.4s ease;
  }

  .similarity-header {
    display: flex;
    align-items: center;
    gap: 10px;
    margin-bottom: 14px;
  }

  .similarity-header svg {
    width: 18px;
    height: 18px;
