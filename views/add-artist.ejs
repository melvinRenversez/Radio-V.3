  }

  .sim-score-text {
    font-size: 12px;
    font-weight: 600;
    color: #666;
    min-width: 36px;
    text-align: right;
  }

  .sim-score-text.high {
    color: #e8774d;
  }

  .sim-score-text.medium {
    color: #e8a84d;
  }

  .sim-score-text.low {
    color: #4d9e6b;
  }

  /* Exact match warning badge */
  .exact-badge {
    display: flex;
    align-items: center;
    gap: 5px;
    font-size: 11px;
    font-weight: 600;
    color: #e8774d;
    background: #e8774d15;
    padding: 4px 10px;
    border-radius: 8px;
    white-space: nowrap;
  }

  .exact-badge svg {
    width: 12px;
    height: 12px;
    stroke: #e8774d;
    stroke-width: 2.5;
