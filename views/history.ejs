          timelineItem.className = 'timeline-item';
          timelineItem.style.animationDelay = `${(groupIndex * 0.1) + (index * 0.05)}s`;

          timelineItem.innerHTML = `
                <div class="timeline-cover">
                    <img src="../Covers/${item.cover || 'default.png'}" alt="${item.titre || 'Unknown Track'}">
                    <div class="play-overlay">
