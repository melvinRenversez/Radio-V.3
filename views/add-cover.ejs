    let covers = <%- JSON.stringify(covers) %>;

    // ============================================
    // SIMILARIT√â ‚Äî Algorithme Levenshtein + scoring
    // ============================================

    function levenshtein(a, b) {
      const m = a.length,
        n = b.length;
      const dp = Array.from({
        length: m + 1
      }, () => Array(n + 1).fill(0));

      for (let i = 0; i <= m; i++) dp[i][0] = i;
      for (let j = 0; j <= n; j++) dp[0][j] = j;

      for (let i = 1; i <= m; i++) {
        for (let j = 1; j <= n; j++) {
          const cost = a[i - 1] === b[j - 1] ? 0 : 1;
          dp[i][j] = Math.min(
            dp[i - 1][j] + 1,
            dp[i][j - 1] + 1,
            dp[i - 1][j - 1] + cost
          );
        }
      }
      return dp[m][n];
    }

    function normalize(str) {
      return str.toLowerCase().trim().replace(/[^a-z0-9\s.]/g, '').replace(/\s+/g, ' ');
    }

    function computeSimilarity(input, coverUrl) {
      const a = normalize(input);
      const b = normalize(coverUrl);

      if (a === '' || b === '') return 0;

      // Exact match (apr√®s normalisation)
      if (a === b) return 100;

      const maxLen = Math.max(a.length, b.length);
      const dist = levenshtein(a, b);
      const baseScore = Math.round(((maxLen - dist) / maxLen) * 100);

      // Bonus si l'un contient l'autre
      let bonus = 0;
      if (a.includes(b) || b.includes(a)) {
        bonus = 12;
      }

      // Bonus si m√™me premier mot
      const wordsA = a.split(' ');
      const wordsB = b.split(' ');
      if (wordsA[0] === wordsB[0] && wordsA[0].length > 2) {
        bonus += 8;
      }

      return Math.min(100, baseScore + bonus);
    }

    function findSimilarCovers(input) {
      if (normalize(input) === '') return [];

      const results = covers
        .map(cover => ({
          url: cover.url,
          score: computeSimilarity(input, cover.url),
          isExact: normalize(input) === normalize(cover.url)
        }))
        .filter(r => r.score >= 40)
        .sort((a, b) => b.score - a.score)
        .slice(0, 5);

      return results;
    }

    // ============================================
    // UI ‚Äî Render similarit√©s
    // ============================================

    function getScoreClass(score) {
      if (score >= 80) return 'high';
      if (score >= 55) return 'medium';
      return 'low';
    }

    function renderSimilarities(results) {
      const panel = document.getElementById('similarityPanel');
      const list = document.getElementById('similarityList');
      const countEl = document.getElementById('simCount');

      if (results.length === 0) {
        panel.classList.remove('visible');
        return;
      }

      panel.classList.add('visible');
      countEl.textContent = results.length + (results.length === 1 ? ' r√©sultat' : ' r√©sultats');
      list.innerHTML = '';

      results.forEach((item, i) => {
        const cls = getScoreClass(item.score);
        const exactHtml = item.isExact ?
          `<div class="exact-badge">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round">
              <path d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z"></path>
              <line x1="12" y1="9" x2="12" y2="13"></line>
              <line x1="12" y1="17" x2="12.01" y2="17"></line>
            </svg>
            Doublon exact
          </div>` : '';

        const el = document.createElement('div');
        el.className = 'similarity-item' + (item.isExact ? ' exact-match' : '');
        el.style.animationDelay = `${i * 0.06}s`;
        el.innerHTML = `
          <span class="sim-rank">${i + 1}</span>
          <span class="sim-name">${item.url}</span>
          ${exactHtml}
          <div class="sim-score-wrap">
            <div class="sim-bar-bg">
              <div class="sim-bar-fill ${cls}" style="width: ${item.score}%"></div>
            </div>
            <span class="sim-score-text ${cls}">${item.score}%</span>
          </div>
        `;
        list.appendChild(el);
      });
    }

    // ============================================
    // INPUT ‚Äî √âcoute en temps r√©el
    // ============================================

    const input = document.getElementById('coverInput');
    const charCount = document.getElementById('charCount');
    const submitBtn = document.getElementById('submitBtn');
    const uploadArea = document.getElementById('uploadArea');
    const fileInput = document.getElementById('fileInput');
    const previewImage = document.getElementById('previewImage');

    let debounceTimer = null;
    let selectedFile = null;

    input.addEventListener('input', () => {
      const val = input.value;
      const len = val.length;

      // Char count
      charCount.textContent = `${len} / 128`;
      charCount.classList.toggle('warning', len > 100);

      // Submit button
      submitBtn.disabled = val.trim().length === 0 && !selectedFile;

      // Debounce la recherche de similarit√©
      clearTimeout(debounceTimer);
      debounceTimer = setTimeout(() => {
        const results = findSimilarCovers(val);
        renderSimilarities(results);
      }, 180);
    });

    // ============================================
    // UPLOAD
    // ============================================
    uploadArea.addEventListener('click', (e) => {
      if (!e.target.closest('.change-image-btn')) {
        fileInput.click();
      }
    });

    uploadArea.addEventListener('dragover', (e) => {
      e.preventDefault();
      uploadArea.classList.add('dragover');
    });

    uploadArea.addEventListener('dragleave', () => {
      uploadArea.classList.remove('dragover');
    });

    uploadArea.addEventListener('drop', (e) => {
      e.preventDefault();
      uploadArea.classList.remove('dragover');
      const files = e.dataTransfer.files;
      if (files.length > 0) handleFileSelect(files[0]);
    });

    fileInput.addEventListener('change', (e) => {
      if (e.target.files.length > 0) handleFileSelect(e.target.files[0]);
    });

    function handleFileSelect(file) {
      if (file.type.startsWith('image/')) {
        selectedFile = file;

        // Afficher la pr√©visualisation
        const reader = new FileReader();
        reader.onload = (e) => {
          previewImage.src = e.target.result;
          uploadArea.classList.add('has-image');
        };
        reader.readAsDataURL(file);

        // Auto-remplir le nom si vide
        if (!input.value) {
          input.value = file.name;
          input.dispatchEvent(new Event('input'));
        }

        submitBtn.disabled = false;
      }
    }

    // ============================================
    // TOAST
    // ============================================
    function showToast(message, type = 'success') {
      const toast = document.getElementById('toast');
      const toastText = document.getElementById('toastText');
      const toastIcon = document.getElementById('toastIcon');

      toast.className = 'toast ' + type;
      toastText.textContent = message;

      if (type === 'success') {
        toastIcon.innerHTML = `<polyline points="20 6 9 17 4 12"></polyline>`;
      } else {
        toastIcon.innerHTML = `
          <line x1="18" y1="6" x2="6" y2="18"></line>
          <line x1="6" y1="6" x2="18" y2="18"></line>
        `;
      }

      toast.classList.add('show');
      setTimeout(() => toast.classList.remove('show'), 3000);
    }

    // ============================================
    // SUBMIT
    // ============================================
    submitBtn.addEventListener('click', async () => {
      const val = input.value.trim();
      if (!val) return;

      // Check doublon exact
      const exactMatch = covers.find(c => normalize(c.url) === normalize(val));
      if (exactMatch) {
        showToast(`"${exactMatch.url}" existe d√©j√†.`, 'error');
        return;
      }

      const formData = new FormData();

      // Ajouter le nom de la couverture
      const coverName = document.getElementById('coverInput').value;
      if (coverName) {
        formData.append('coverName', coverName);
      }

      // Ajouter le fichier si s√©lectionn√©
      const fileInput = document.getElementById('fileInput');
      if (fileInput.files.length > 0) {
        formData.append('cover', fileInput.files[0]);
      }

      submitBtn.classList.add('loading');
      submitBtn.disabled = true;

      try {
        const response = await fetch("/add-cover", {
          method: "POST",
          body: formData // Pas de Content-Type, le navigateur le g√®re automatiquement
        });

        if (response.ok) {
          window.location.href = "/admin";
        } else {
          const error = await response.json();
          showToast(error.error || 'Erreur lors de l\'ajout', 'error');
        }
      } catch (error) {
        console.error('Erreur:', error);
        showToast('Erreur lors de l\'ajout', 'error');
      }

      // Reset
      input.value = '';
      charCount.textContent = '0 / 128';
      charCount.classList.remove('warning');
      submitBtn.disabled = true;
      submitBtn.classList.remove('loading');
      selectedFile = null;
      uploadArea.classList.remove('has-image');
      document.getElementById('similarityPanel').classList.remove('visible');
      renderCovers();
    });

    // ============================================
    // ACTIONS
    // ============================================
    function deleteCover(index) {
      const cover = covers[index];
      if (confirm(`√ätes-vous s√ªr de vouloir supprimer "${cover.url}" ?`)) {
        covers.splice(index, 1);
        showToast(`"${cover.url}" supprim√©`, 'success');
        renderCovers();
      }
    }

    function viewCover(url) {
      window.open(url, '_blank');
    }

    // ============================================
    // RENDER
    // ============================================
    

    // ============================================
    // PARTICULES CANVAS
    // ============================================
    const canvas = document.getElementById('particleCanvas');
    const ctx = canvas.getContext('2d');

    function resizeCanvas() {
      canvas.width = window.innerWidth;
      canvas.height = window.innerHeight;
    }
    resizeCanvas();
    window.addEventListener('resize', resizeCanvas);

    class Particle {
      constructor() {
        this.reset();
      }
      reset() {
        this.x = Math.random() * canvas.width;
        this.y = Math.random() * canvas.height;
        this.size = Math.random() * 2 + 0.5;
        this.speedX = (Math.random() - 0.5) * 0.5;
        this.speedY = (Math.random() - 0.5) * 0.5;
        this.opacity = Math.random() * 0.5 + 0.2;
        this.color = Math.random() > 0.5 ? '#ffffff' : '#666666';
      }
      update() {
        this.x += this.speedX;
        this.y += this.speedY;
        if (this.x < 0 || this.x > canvas.width) this.speedX *= -1;
        if (this.y < 0 || this.y > canvas.height) this.speedY *= -1;
      }
      draw() {
        ctx.fillStyle = this.color;
        ctx.globalAlpha = this.opacity;
        ctx.beginPath();
        ctx.arc(this.x, this.y, this.size, 0, Math.PI * 2);
        ctx.fill();
      }
    }

    const particles = [];
    let particleCount;
    if (window.innerWidth < 400) particleCount = 50;
    else if (window.innerWidth < 600) particleCount = 100;
    else if (window.innerWidth < 900) particleCount = 150;
    else if (window.innerWidth < 1200) particleCount = 250;
    else if (window.innerWidth < 1600) particleCount = 350;
    else if (window.innerWidth < 2000) particleCount = 550;
    else particleCount = 700;

    for (let i = 0; i < particleCount; i++) particles.push(new Particle());

    function animateParticles() {
      ctx.clearRect(0, 0, canvas.width, canvas.height);

      ctx.globalAlpha = 0.1;
      for (let i = 0; i < particles.length; i++) {
        for (let j = i + 1; j < particles.length; j++) {
          const dx = particles[i].x - particles[j].x;
          const dy = particles[i].y - particles[j].y;
          const distance = Math.sqrt(dx * dx + dy * dy);
          if (distance < 120) {
            ctx.strokeStyle = '#666666';
            ctx.lineWidth = 0.5;
            ctx.beginPath();
            ctx.moveTo(particles[i].x, particles[i].y);
            ctx.lineTo(particles[j].x, particles[j].y);
            ctx.stroke();
          }
        }
      }

      particles.forEach(p => {
        p.update();
        p.draw();
      });
      requestAnimationFrame(animateParticles);
    }

    animateParticles();

  </script>
