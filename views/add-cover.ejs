          <line x1="12" y1="5" x2="12" y2="19"></line>
          <line x1="5" y1="12" x2="19" y2="12"></line>
        </svg>
        <span class="btn-text">Ajouter la couverture</span>
      </button>
    </div>

    <!-- Content -->
   
  </div>

  <!-- Toast -->
  <div class="toast" id="toast">
    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" id="toastIcon">
      <polyline points="20 6 9 17 4 12"></polyline>
    </svg>
    <span id="toastText"></span>
  </div>

